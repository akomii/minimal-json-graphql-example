type Author {
    id: ID!
    firstName: String!
    lastName: String!
    books: [Book]
}

type Book {
    id: ID!
    title: String!
    publishedYear: Int!
    author: Author!
}

type Query {
    authors: [Author]
    author(id: ID!): Author
    books: [Book]
    book(id: ID!): Book
}

type Mutation {
    createAuthor(firstName: String!, lastName: String!): Author
    createBook(title: String!, publishedYear: Int!, authorId: ID!): Book
}
